<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notes.Views.NoteAddingPage">
    <ContentPage.Content>
        
        <StackLayout BackgroundColor="Black">
            <StackLayout Margin="20">
                <Editor Placeholder="Note Text" Text="{Binding ContentNotesText}" HeightRequest="100" BackgroundColor="Wheat"/>
                <Grid ColumnDefinitions="*,*">
                    <Button Text="Save" Clicked="SaveButton_Clicked" BackgroundColor="Wheat"/>
                    <Button Grid.Column="1" Text="Del" Clicked="DelButton_Clicked" BackgroundColor="Wheat"/>
                </Grid>
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>